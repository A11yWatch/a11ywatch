{
  "ignoreRoot": [".git", ".sass-cache", "bower-components", "coverage"],
  "watch": ["src"],
  "ext": "ts,json,js",
  "ignore": [
    "node_modules/!(is-node)",
    "node_modules/is-node/node_modules",
    "src/scripts",
	"src/screenshots",
	"__tests__"
  ],
  "execMap": {
    "ts": "node --require ts-node/register"
  }
}
